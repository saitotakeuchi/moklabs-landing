# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
# Set to "development", "production", or "test"
NODE_ENV=development

# ========================================
# RESEND EMAIL CONFIGURATION
# ========================================
# Resend API Key - Get from https://resend.com/api-keys
# Leave blank locally to use simulation mode (emails will be logged to console)
RESEND_API_KEY=

# Email configuration for contact form
FROM_EMAIL=contato@moklabs.com.br
TO_EMAIL=contato@moklabs.com.br
FROM_NAME=Mok Labs

# ========================================
# ANALYTICS & TRACKING
# ========================================
# Google Analytics Tracking ID (e.g., G-XXXXXXXXXX)
# Leave blank in development to disable tracking
# Note: NEXT_PUBLIC_ prefix makes this variable available in the browser
NEXT_PUBLIC_GA_TRACKING_ID=

# ========================================
# SITE CONFIGURATION
# ========================================
# Base URL for the site (used for canonical URLs, sitemaps, etc.)
NEXT_PUBLIC_SITE_URL=https://moklabs.com.br

# Site name
NEXT_PUBLIC_SITE_NAME=Mok Labs

# ========================================
# VERCEL CONFIGURATION (Auto-populated by Vercel)
# ========================================
# These are automatically set by Vercel, no need to set manually
# VERCEL_ENV=
# VERCEL_URL=
# VERCEL_GIT_COMMIT_SHA=

# ========================================
# FEATURE FLAGS (Optional)
# ========================================
# Enable/disable features for testing
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COOKIE_CONSENT=true

# ========================================
# API CONFIGURATION (Optional)
# ========================================
# Rate limiting for API endpoints (requests per minute)
API_RATE_LIMIT=60

# CORS configuration
CORS_ALLOWED_ORIGINS=*

# ========================================
# CONTENT & MEDIA
# ========================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE=10

# Image optimization domains (comma-separated)
IMAGE_DOMAINS=

# ========================================
# SECURITY (Optional)
# ========================================
# API secret for internal requests
API_SECRET=

# JWT secret for authentication (if using)
# JWT_SECRET=
