# Application Configuration
ENVIRONMENT=development
PORT=8000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://moklabs.com.br

# Supabase Configuration
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Redis Configuration
# For local development with Docker: redis://localhost:6379
# For production (Fly.io/Upstash): redis://default:password@hostname:6379
REDIS_URL=redis://localhost:6379

# Caching Configuration
USE_CACHING=true
CACHE_SIMILARITY_THRESHOLD=0.95
CACHE_MAX_INDEX_SIZE=10000

# Cache TTL Configuration (in seconds)
CACHE_EMBEDDING_TTL=86400         # 24 hours
CACHE_SEARCH_RESULTS_TTL=3600     # 1 hour
CACHE_LLM_RESPONSE_TTL=1800       # 30 minutes
CACHE_PROCESSED_QUERY_TTL=7200    # 2 hours
CACHE_RAG_RESPONSE_TTL=1800       # 30 minutes
